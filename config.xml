<?xml version="1.0" encoding="utf-8"?>
<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:rim="http://www.blackberry.com/ns/widgets"
        version="2.0.0.0">

  <author href="http://www.example.com/" 
          rim:copyright="Copyright 1998-2011 My Corp">My Corp</author>

  <name>The example application</name>

  <description>
    A sample application to demonstrate some of the possibilities.
  </description>

  <rim:orientation mode="auto"/>
 

  <rim:permissions>
    <rim:permit>access_shared</rim:permit>
    <rim:permit>read_geolocation</rim:permit>
    <rim:permit>use_camera</rim:permit>  
  </rim:permissions>

  <icon src="icons/example.png"/>

  <content src="index.html"/>

  <feature id="blackberry.polarmobile.childbrowser" />
  <feature id="blackberry.invoke" />
<feature id="blackberry.invoke.BrowserArguments" /> 
  <access uri ="*"/>

</widget>
